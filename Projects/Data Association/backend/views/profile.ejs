<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <div class="w-full min-h-screen bg-zinc-900 text-white flex flex-col pt-15 items-center gap-10">
        <div class="flex w-full gap-50 justify-center items-center">
            <h1 class="text-2xl uppercase">Hello , <%= user.name %></h1>
            <a href="/logout" class="p-2 bg-red-500 rounded">Logout</a>
        </div>
        <form action="/post" method="post" class="flex flex-col justify-center items-center gap-5">
            <textarea name="content" class="resize-none h-48 border-2 p-2 rounded border-zinc-600 w-72"
                placeholder="What's in You Mind ? "></textarea>
            <input type="submit" value="Create Post" class="p-2 bg-blue-500 rounded">
        </form>

        <h2>Your Posts Here.</h2>
        <% user.posts.reverse().forEach(function(post){ %>
            <div class="border-2 mb-4 border-zinc-600 w-120 rounded h-36 flex flex-col gap-2 p-2">
                <h2>@<%=user.username%>
                </h2>
                <p>
                    <%= post.content %>
                </p>
                <div class="flex justify-between">
                    <div class="flex items-center gap-2">
                        <a class="px-2 py-1 cursor-pointer text-zinc-600 border-1 border-zinc-400 rounded bg-white"
                            href="/like/<%=post._id%>">
                            <%= post.likes.indexOf(user._id)===-1 ? "Like" : "Unlike" %>
                        </a>
                        <h2> <%= post.likes.length %> Likes</h2>
                    </div>
                    <a class="px-2 py-1 cursor-pointer text-zinc-600 border-1 border-zinc-400 rounded bg-white" href="/edit/<%= post._id %>" >Edit</a>
                </div>

            </div>
            <% }) %>





    </div>
    <script src="/javascripts/script.js"></script>
</body>

</html>